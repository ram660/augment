# Environment Configuration for HomeVision AI

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# GOOGLE GEMINI API
# ============================================
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here
# Alternative name (both work)
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# DATABASE
# ============================================
# Use SQLite for development (set to false for PostgreSQL)
USE_SQLITE=true

# SQLite (for development/testing)
# DATABASE_URL=sqlite:///./homevision.db
# DATABASE_URL_ASYNC=sqlite+aiosqlite:///./homevision.db

# PostgreSQL (for production)
DATABASE_URL=postgresql://homevision:password@localhost:5432/homevision_db
DATABASE_URL_ASYNC=postgresql+asyncpg://homevision:password@localhost:5432/homevision_db

# ============================================
# REDIS (Caching & Sessions)
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Auto-reload on code changes (dev only)

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_with_openssl
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# PAYMENT PROCESSING (Stripe)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# FILE STORAGE
# ============================================
# Local storage path for development
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Google Cloud Storage (for production)
USE_GCS=false
GCS_BUCKET_NAME=homeview-ai-transformations
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcs-service-account.json

# AWS S3 (alternative to GCS)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=homevision-uploads
# AWS_REGION=us-west-2

# ============================================
# EXTERNAL APIS (Future)
# ============================================
# Perplexity API for real-time web research
# PERPLEXITY_API_KEY=

# Retailer APIs
# HOME_DEPOT_API_KEY=
# LOWES_API_KEY=
# WAYFAIR_API_KEY=

# ============================================
# CELERY (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# EMAIL (for notifications)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@homeviewai.ca

# ============================================
# MONITORING & ANALYTICS
# ============================================
# SENTRY_DSN=
# GOOGLE_ANALYTICS_ID=

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_CONTRACTOR_MATCHING=true
ENABLE_IMAGE_GENERATION=true
ENABLE_PERPLEXITY_SEARCH=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# GEMINI MODEL CONFIGURATION
# ============================================
# Using gemini-2.0-flash for all tasks (text, vision, image generation)
GEMINI_TEXT_MODEL=gemini-2.0-flash-exp
GEMINI_VISION_MODEL=gemini-2.0-flash-exp
GEMINI_IMAGEN_MODEL=imagen-4.0-generate-001
GEMINI_EMBEDDING_MODEL=models/text-embedding-004
GEMINI_DEFAULT_TEMPERATURE=0.7
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT_SECONDS=60

# ============================================
# TRANSFORMATION CONFIGURATION
# ============================================
DEFAULT_NUM_VARIATIONS=4
MAX_NUM_VARIATIONS=4
TRANSFORMATION_TIMEOUT=120
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
