# Example secrets file - DO NOT commit actual secrets to version control
# Copy this file to secrets.yaml and fill in actual values
# Then apply with: kubectl apply -f k8s/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: homeview-secrets
  namespace: homeview
type: Opaque
stringData:
  # Database
  postgres-db: homeview_db
  postgres-user: homeview_user
  postgres-password: CHANGE_ME_STRONG_PASSWORD
  database-url: postgresql+asyncpg://homeview_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/homeview_db
  
  # Redis
  redis-password: CHANGE_ME_REDIS_PASSWORD
  redis-url: redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379/0
  
  # JWT
  secret-key: CHANGE_ME_VERY_LONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS
  
  # Gemini API
  gemini-api-key: YOUR_GEMINI_API_KEY_HERE
  
  # Application
  allowed-origins: https://homeview.ai,https://www.homeview.ai

